{
  "name": "@briar/vue-code-converter",
  "version": "0.0.3",
  "author": "zhanglei <1371018512@qq.com>",
  "description": "vue代码转换工具",
  "module": "es/index.js",
  "main": "lib/index.js",
  "files": [
    "es/",
    "lib/"
  ],
  "bin": {
    "vue-convert": "./lib/bin/index.js"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "tsc --watch -p ./tsconfig.json",
    "build": "pnpm run clean && pnpm build:es && pnpm build:lib",
    "build:lib": "tsc --module CommonJS --outDir lib",
    "build:es": "tsc --module ES6 --outDir es",
    "clean": "rimraf ./lib ./es",
    "prepublishOnly": "pnpm build"
  },
  "license": "MIT",
  "dependencies": {
    "@vue/compiler-core": "^3.4.31",
    "@vue/compiler-sfc": "^3.4.31",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "tslib": "^2.6.2",
    "typescript": "~4.5.2",
    "vue-template-compiler": "^2.7.16"
  },
  "devDependencies": {
    "@types/lodash": "4.14.74",
    "@types/node": "^20.14.11",
    "@types/prettier": "2.6.2"
  }
}
