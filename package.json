{
	"name": "briar-mono",
	"version": "0.0.1",
	"description": "briar-mono仓库",
	"main": "index.js",
	"scripts": {
		"init": "sh ./scripts/assets-init.sh",
		"bootstrap": "lerna bootstrap",
		"publish": "lerna publish",
		"dev": "lerna run dev --parallel",
		"build": "lerna run build",
		"build:watch": "lerna run build:watch",
		"dev:front": "cd packages/briar-frontend && pnpm run dev",
		"dev:node": "cd packages/briar-node && pnpm run dev",
		"start": "cd ./packages/briar-node && pnpm run start",
		"postinstall": "husky install",
		"lint": "eslint",
		"lint-staged": "lint-staged",
		"cdn": "cd packages/briar-frontend && pnpm run cdn"
	},
	"engines": {
		"node": ">=18.17.0",
		"pnpm": ">=8.15.9"
	},
	"author": "zhangleilaoge",
	"license": "ISC",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"concurrently": "^9.0.1",
		"eslint": "8.42.0",
		"eslint-plugin-react": "^7.35.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.5",
		"lerna": "^4.0.0",
		"lint-staged": "^15.2.9",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"stylelint": "^16.9.0",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-standard": "^36.0.1",
		"typescript": "^4.5.2",
		"typescript-eslint": "^8.3.0"
	},
	"lint-staged": {
		"**/*.{js,jsx,tsx,ts,scss}": [
			"eslint"
		]
	}
}
